<h1 class="mt-5">Half Star Rating</h1>

@for (int j = 0; j < 1; j++)
{

    <fieldset class="rate" id="rating">
       
        @for (int i = 10; i != @Model.imgRecords.FirstOrDefault().Rating; i--)
        {
            <input type="radio" id="rating+@i" name="rating" value="@i" />
            @if (i % 2 == 0)
            {
                <label for="rating+@i"></label>
            }
            else
            {
                <label class="half " for="rating+@i"></label>
            }
        }
        @for (int i = (int)@Model.imgRecords.FirstOrDefault().Rating; i >= 1; i--)
        {
            <input type="radio" id="rating+@i" name="rating" value="@i" />
            @if (i % 2 == 0)
            {
                <label class="filled" for="rating+@i"></label>
            }
            else
            {
                <label class="half filled" for="rating+@i"></label>
            }
        }
    </fieldset>
}
